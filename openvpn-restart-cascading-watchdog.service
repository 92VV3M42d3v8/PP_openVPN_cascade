After=auditd.service systemd-user-sessions.service time-sync.target openvpn-restart-cascading.service

[Service]
User=root
TimeoutStartSec=0
Type=simple
KillMode=process
ExecStart=/etc/systemd/system/openvpn_service_restart_cascading_watchdog.sh
Restart=always
